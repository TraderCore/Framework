{
    "extends": "@tradercore/typescript-config/nextjs.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "noEmit": true
    },
    "include": [
        "./next-env.d.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"]
}
