{
    "extends": "@tradercore/typescript-config/node.json",
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": ".",
        "declaration": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": ["node_modules", "dist"]
}
