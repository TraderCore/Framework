{
    "extends": "../tooling/typescript-config/node.json",
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": ".",
        "declaration": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "Node",
        "module": "CommonJS"
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": ["node_modules", "dist"]
}
