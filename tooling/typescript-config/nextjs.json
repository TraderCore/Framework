{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./base.json",
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "plugins": [{ "name": "next" }],
        "lib": ["dom", "dom.iterable", "esnext"],
        "paths": {
            "@/*": ["./src/*"]
        },
        "incremental": true
    }
}
